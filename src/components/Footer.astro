---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { name: 'Twitter', href: 'https://x.com/hilaltechnologi', icon: 'twitter' },
  { name: 'GitHub', href: 'https://github.com/hilaltechnologic', icon: 'github' },
  { name: 'LinkedIn', href: 'https://www.linkedin.com/', icon: 'linkedin' },
  { name: 'RSS', href: '/rss.xml', icon: 'rss' }
];

const footerLinks = [
  {
    title: 'Blog',
    links: [
      { text: 'Artikel Terbaru', href: '/blog' },
      { text: 'Kategori', href: '/kategori' },
      { text: 'Arsip', href: '/arsip' }
    ]
  },
  {
    title: 'Halaman',
    links: [
      { text: 'Tentang', href: '/tentang' },
      { text: 'Kontak', href: '/kontak' },
      { text: 'Kebijakan Privasi', href: '/kebijakan-privasi' },
      { text: 'Syarat & Ketentuan', href: '/syarat-ketentuan' },
      { text: 'Disclaimer', href: '/disclaimer' }
    ]
  }
];
---

<footer class="relative bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-950 border-t border-gray-200/50 dark:border-gray-700/50 mt-16 overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0 bg-gradient-to-r from-primary-500 to-secondary-500"></div>
  </div>
  
  <div class="container mx-auto px-4 py-16 relative z-10">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-12">
      <!-- Brand Section -->
      <div class="md:col-span-2">
        <a href="/" class="text-3xl font-display font-bold text-gray-900 dark:text-white mb-6 block group">
          <span class="bg-gradient-to-r from-primary-600 to-secondary-600 bg-clip-text text-transparent group-hover:from-primary-700 group-hover:to-secondary-700 transition-all duration-300">Hilal</span><span class="text-gray-900 dark:text-white">Technologic</span>
        </a>
        <p class="text-gray-700 dark:text-gray-300 mb-8 max-w-md text-lg leading-relaxed">
          Platform blog modern yang menghadirkan wawasan teknologi terdepan. 
          Dibuat dengan <span class="text-red-500">❤️</span> menggunakan Astro dan Tailwind CSS.
        </p>
        
        <!-- Social Links -->
        <div class="flex space-x-4">
          {socialLinks.map(social => (
            <a
              href={social.href}
              class="p-3 rounded-xl bg-white/50 dark:bg-gray-800/50 text-gray-700 dark:text-gray-200 hover:bg-gradient-to-r hover:from-primary-500 hover:to-secondary-500 hover:text-white hover:scale-110 transition-all duration-300 shadow-soft hover:shadow-medium group"
              aria-label={social.name}
            >
              {social.icon === 'twitter' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              )}
              {social.icon === 'github' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              )}
              {social.icon === 'linkedin' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              )}
              {social.icon === 'rss' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M6.503 20.752c0 1.794-1.456 3.248-3.251 3.248-1.796 0-3.252-1.454-3.252-3.248 0-1.794 1.456-3.248 3.252-3.248 1.795.001 3.251 1.454 3.251 3.248zm-6.503-12.572v4.811c6.05.062 10.96 4.966 11.022 11.009h4.817c-.062-8.71-7.118-15.758-15.839-15.82zm0-3.368c10.58.046 19.152 8.594 19.183 19.188h4.817c-.03-13.231-10.755-23.954-24-24v4.812z"/>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>

      <!-- Footer Links -->
      {footerLinks.map(section => (
        <div class="animate-fade-in">
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-6 font-display">
            {section.title}
          </h3>
          <ul class="space-y-3">
            {section.links.map(link => (
              <li>
                <a
                  href={link.href}
                  class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-all duration-300 hover:translate-x-1 block"
                >
                  {link.text}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Bottom Section -->
    <div class="border-t border-gray-200/50 dark:border-gray-700/50 mt-12 pt-8 flex flex-col md:flex-row justify-between items-center">
      <p class="text-gray-600 dark:text-gray-400 text-sm">
        © {currentYear} Hilal Technologic. Semua hak dilindungi.
      </p>
      <div class="flex space-x-8 mt-4 md:mt-0">
        <a href="/kebijakan-privasi" class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 text-sm transition-colors">
          Kebijakan Privasi
        </a>
        <a href="/syarat-ketentuan" class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 text-sm transition-colors">
          Syarat & Ketentuan
        </a>
        <a href="/disclaimer" class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 text-sm transition-colors">
          Disclaimer
        </a>
      </div>
    </div>
  </div>
</footer>
