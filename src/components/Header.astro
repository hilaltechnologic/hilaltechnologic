---
import SearchBar from './SearchBar.astro';

const navItems = [
  { href: '/', text: 'Beranda' },
  { href: '/blog', text: 'Blog' },
  { href: '/kategori', text: 'Kategori' },
  { href: '/author', text: 'Author' },
  { href: '/arsip', text: 'Arsip' },
  { href: '/tentang', text: 'Tentang' },
  { href: '/kontak', text: 'Kontak' }
];
---

<header class="glass-effect fixed w-full top-0 z-50 border-b border-white/20 dark:border-gray-700/20">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex justify-between items-center">
      <!-- Logo -->
      <a href="/" class="text-2xl font-display font-bold text-gray-900 dark:text-white hover:scale-105 transition-transform duration-300">
        <span class="bg-gradient-to-r from-primary-600 to-secondary-600 bg-clip-text text-transparent">Hilal</span><span class="text-gray-900 dark:text-white">Technologic</span>
      </a>

      <!-- Search Bar (Desktop) -->
      <div class="hidden lg:block flex-1 max-w-md mx-8">
        <SearchBar />
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-6">
        {navItems.map(item => (
          <a
            href={item.href}
            class="relative text-gray-700 dark:text-gray-200 hover:text-primary-600 dark:hover:text-primary-400 font-medium transition-all duration-300 group"
          >
            {item.text}
            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-primary-600 to-secondary-600 group-hover:w-full transition-all duration-300"></span>
          </a>
        ))}
        
        <!-- Search icon for tablet -->
        <button
          id="search-toggle"
          class="lg:hidden p-3 rounded-xl bg-white/50 dark:bg-gray-800/50 text-gray-700 dark:text-gray-200 hover:bg-white/80 dark:hover:bg-gray-700/80 hover:scale-110 transition-all duration-300 shadow-soft"
          aria-label="Toggle search"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </button>
        
        <!-- Dark mode toggle -->
        <button
          onclick="toggleDarkMode()"
          class="p-3 rounded-xl bg-white/50 dark:bg-gray-800/50 text-gray-700 dark:text-gray-200 hover:bg-white/80 dark:hover:bg-gray-700/80 hover:scale-110 transition-all duration-300 shadow-soft"
          aria-label="Toggle dark mode"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 hidden dark:block" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 block dark:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
          </svg>
        </button>
      </div>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-3 rounded-xl bg-white/50 dark:bg-gray-800/50 text-gray-700 dark:text-gray-200 hover:bg-white/80 dark:hover:bg-gray-700/80 hover:scale-110 transition-all duration-300 shadow-soft"
        aria-label="Open menu"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Search Bar (Tablet) -->
    <div
      id="search-bar-tablet"
      class="hidden lg:hidden mt-4"
    >
      <SearchBar />
    </div>

    <!-- Mobile Navigation -->
    <div
      id="mobile-menu"
      class="hidden md:hidden mt-4 pb-4 space-y-4"
    >
      <!-- Search Bar (Mobile) -->
      <div class="mb-4">
        <SearchBar />
      </div>
      
      {navItems.map(item => (
        <a
          href={item.href}
          class="block text-gray-800 dark:text-gray-100 hover:text-primary-700 dark:hover:text-primary-300 transition-colors"
        >
          {item.text}
        </a>
      ))}
      
      <!-- Dark mode toggle for mobile -->
      <button
        onclick="toggleDarkMode()"
        class="w-full text-left p-2 rounded-lg bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-100 hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors"
      >
        <span class="dark:hidden">Aktifkan Dark Mode</span>
        <span class="hidden dark:block">Aktifkan Light Mode</span>
      </button>
    </div>
  </nav>
</header>

<!-- Add padding to account for fixed header -->
<div class="h-20"></div>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }

  // Search toggle for tablet
  const searchToggle = document.getElementById('search-toggle');
  const searchBarTablet = document.getElementById('search-bar-tablet');

  if (searchToggle && searchBarTablet) {
    searchToggle.addEventListener('click', () => {
      searchBarTablet.classList.toggle('hidden');
    });
  }
</script>
